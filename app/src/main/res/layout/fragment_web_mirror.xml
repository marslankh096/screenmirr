<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".screenmirror.ui.main.MiracastFragment">

    <RelativeLayout
        android:layout_marginTop="@dimen/_15sdp"
        android:id="@+id/rl_top"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_above="@+id/webMirror_btn_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:id="@+id/fragment_container_view_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.sid.testscreenmirr.webcast.ui.fragment.StreamFragment"
            tools:ignore="MissingClass" />

        <TextView
            android:visibility="gone"
            android:id="@+id/vid_tutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_container_view_tag"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="@dimen/_15sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="sans-serif"
            android:text="@string/video_tutorial"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            app:drawableLeftCompat="@drawable/ic_vid_tutorial" />

    </RelativeLayout>




    <TextView
        android:visibility="gone"
        android:id="@+id/qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/white_rounded_stroke_bg"
        android:foreground="@drawable/ripple_animation"
        android:drawablePadding="-30dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:minWidth="@dimen/_160sdp"
        android:paddingStart="@dimen/_30sdp"
        android:minHeight="@dimen/_50sdp"
        android:text="@string/scan_qr"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        app:drawableLeftCompat="@color/black"
        tools:ignore="RtlSymmetry" />
    <EditText
        android:visibility="gone"
        android:id="@+id/enter_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qr_code"
        android:background="@drawable/ic_et_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:drawableEnd="@drawable/ic_next_play"
        android:hint="@string/enter_code"
        android:minWidth="@dimen/_160sdp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:minHeight="@dimen/_50sdp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:fontFamily="sans-serif-medium"
        android:textSize="@dimen/_16sdp"/>

    <Button
        android:id="@+id/webMirror_btn_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:background="@drawable/background_start_miorroring"
        android:elevation="@dimen/_6sdp"
        android:fontFamily="sans-serif-medium"
        android:foreground="@drawable/ripple_animation"
        android:minWidth="@dimen/_150sdp"
        android:minHeight="@dimen/_35sdp"
        android:text="@string/start"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        app:backgroundTint="@color/blue" />
</RelativeLayout>